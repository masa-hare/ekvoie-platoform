# Required — MySQL connection string provided by Railway MySQL plugin
DATABASE_URL=mysql://user:password@host:3306/dbname

# Required — Random secret for signing session JWTs (generate with: openssl rand -base64 32)
JWT_SECRET=your-random-secret-here

# Required — Password for the /admin panel
ADMIN_PASSWORD=your-admin-password-here

# Optional — App identifier used for cookie naming (default: svp)
VITE_APP_ID=svp

# Set automatically by Railway — do not set manually
# PORT=3000
# NODE_ENV=production
